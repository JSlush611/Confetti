<!-- HTML code for the form -->
<div class="data-form">
  <form action="/courses/create" method="POST">
    <h2>Create a new Course:</h2>
    <label for="inputTitle">Title</label>
    <input type="text" name="title" id="inputTitle" placeholder="Title" autofocus>

    <label for="inputDescription">Description</label>
    <input type="text" name="description" id="inputDescription" placeholder="Description" required>

    <label for="inputZipCode">Zip Code</label>
    <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code" required>

    <label for="inputItems">List of Items</label>
    <input type="text" name="items" id="inputItems" placeholder="Enter items separated by commas">

    <button type="submit">Submit</button>
  </form>
</div>

  
