<div class="container">
  <h1>Course Data for <%= courses.name %></h1>

  <table>
    <tr>
      <th>Title</th>
      <td><%= courses.title %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= courses.description %></td>
    </tr>
    <tr>
      <th>Items</th>
      <td><%= courses.items %></td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td><%= courses.zipCode %></td>
    </tr>
  </table>

<br>
<div>
  <a href="/courses">View coursess</a>
</div>
<br>
<div>
  <a href="<%=`/courses/${courses._id}/edit`%>">
    Edit Course Details
  </a>
</div>
<br>
<div>
  <a href="<%= `/courses/${courses._id}/delete?_method=DELETE` %>"
  onclick="return confirm('Are you sure you want to delete this course? It cannot be undone!')">Delete courses</a>
</div>

</div>

